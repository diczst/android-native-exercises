<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".notification.NotificationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifikasi intent ke browser"
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_marginHorizontal="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="Notifikasi 1 Channel 1"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifikasi dasar tanpa intent"
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_notification2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="Notifikasi 2 Channel 1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifikasi intent ke aplikasi"
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_notification3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="Notifikasi 3 Channel 1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_vibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Getar"
            android:backgroundTint="@color/danger"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_ringtone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/success_dark"
            android:text="Ringtone"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>